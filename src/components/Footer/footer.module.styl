// Variables don't need a dollar sign but it makes them easy to identify later
// in code
@import '../../assets/styles/core'



  h1 
    span 
      display block
      width 100%
      line-height: 1
      font-weight: 400
      font-size 3rem

      &:last-child
        font-size: 6rem
        font-weight: 900
        text-transform: uppercase
        color $yellow
        letter-spacing: -.4rem
        
  ul
    list-style none
    position: absolute
    top 47.5%
    right 0

    @media(max-width $screen-sm)
      position: relative
      top 0
      left 0
      padding: 0 0 0 .2rem
      

    li 
      display inline
      margin-right: 10px
      padding: .6rem 1rem
      background-color #3f4040
      border 1px solid #3f4040
      border-radius: 5px;
      line-height: 2.6

      a   
        color #fefaee
        font-size 400
        transition all .15s linear
        letter-spacing: auto

      &:hover
        background #323333;
        border 1px solid #3f4040

        & > a 
          color $yellow


      &:last-child
        margin-right: 0

  .op8 
    opacity .8
    font-size: .8rem
    padding 1rem 0 0 .25rem

    @media(max-width $screen-sm)
      padding 1rem .2rem 0