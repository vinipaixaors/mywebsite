@import '../core'

.sectionBg
  max-width 100vw
  overflow hidden

.bannerImgRight  
  width 100%

  @media(max-width $screen-sm)
    width: 60%;
    text-align: center;
    margin: 0 auto;

  img 
    width 100%
    border-radius 100% 50% 50% 100% / 75% 69% 69% 75%
    box-shadow 2px 10px 0px 0px rgba(0, 0, 0, 0.16)

.container
  .wrapper
    // height calc(100vh - 56px)
    height calc(100vh)
    position relative
    padding-bottom 4rem

    @media(max-width $screen-xs)
      height 100%

    .bannerImgRight
      position absolute
      transform: translate(-50%,-50%);
      top: 50%; 
      left: 50%;
      width 250px

      @media(max-width 600px)
        position: unset
        transform: unset
        width 200px
        margin 0 auto

    .contentText
      position absolute
      transform: translateY(-50%);
      top: 50%;
      width 100%
      display block

      @media(max-width 600px)
        position: unset
        transform: unset
        margin-bottom 2rem

      h1 
        span
          display: block
          line-height: 0
          font-weight: 400
          font-size 3.1rem
          font-family: 'Advent Pro'

          &:nth-of-type(2)
            font-size: 8rem
            font-weight: 900
            text-transform: uppercase
            color $yellow
            letter-spacing: -.5rem
            line-height: 1.2
            -moz-line-height 1.4
            font-family: sans-serif;
            // font-family: 'Advent Pro'
            background: linear-gradient(to bottom right, $yellow, yellow);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            z-index: 2

            @media(max-width $screen-xs)
              font-size: 6rem
            
            @media(max-width $screen-xxs)
              font-size: 5.2rem
      
      p 
        font-size 1.2rem
        font-weight: 200
        letter-spacing: .05rem
        line-height: 1.4
        margin 0
        padding 0 0 0 6px
        font-family: 'Advent Pro'

        @media(max-width 600px)
          padding 0

        &:nth-of-type(2)
          font-style: italic

        strong 
          color $yellow
          font-weight: 600

    .contentFooter
      position absolute
      bottom: 0
      max-width 100%
      display block

      @media(max-width 600px)
        position: unset 

      .social
        list-style: none
        margin 0 0 1.5rem 
        padding 0
        text-align: right

        @media(max-width 600px)
          text-align: left
          margin 0 
          padding 0

        li  
          display: inline-block
          margin-left: 1.5rem

          @media(max-width 600px)
            margin 0
            padding 0 10px 0 0

          &:hover
            a 
              color #ffffff

          a 
            color #666666
            text-decoration: none   

            .iconGithub  
              // background-image url('../svg/icon-github.svg')
              width 20px
              height 20px
              position relative


      .perosnalContact
        list-style: none
        margin 2rem 0 0 
        padding 0
        height 100%
        display: block

        @media(max-width $screen-xs)
          margin 1rem 0 0
        
        .local
          @media(max-width $screen-xs)
            display: none

        .whatsapp
          @media(max-width $screen-xs)
            span
              a
                display: block
                padding 0

                &:last-child
                  display: none

        li  
          display: inline-block
          margin-right: 6rem
          

          @media(max-width $screen-xs)
            width 40%
            margin-right 0

          &:hover
            strong 
              color #ffffff

          strong 
            display: block
            margin-bottom: 1rem
            font-size .7rem
            text-transform: uppercase
            letter-spacing: -.02rem
            
            @media(max-width $screen-xs)
              width 100%

          
          span
            font-size 1rem
            font-family: 'Advent Pro'
            letter-spacing: .02rem

            a
              text-decoration: none
              padding-right .8rem
              
              &:last-child
                padding-right 0

      hr
        border-top: 1px solid #000;
        border-bottom: 1px solid #fff;
        border-left: none;
        border-right: none;
        opacity: .02;
        bottom 0

// Outras Sections
.sections
  overflow hidden
  
  .container
    .wrapper
      height 100%
      position relative

      div
        padding-top 4rem
        padding-bottom 4rem

        @media(max-width $screen-xs)
          padding 1rem

        .bannerImgRight
          text-align right
          position: unset 
          transform: unset
          margin 0
          padding 0

          @media(max-width $screen-xs)
            text-align: center
            margin 0 auto 

          h3
            margin 0 0 1rem
            padding 0

            @media(max-width $screen-xs)
              margin 0 0 .5rem

      div
        &:nth-of-type(2)
          column-count: 2;

          @media(max-width 600px)
            column-count unset

          p 
            // font-family: 'Advent Pro'
            // max-width 600px
            font-size 1rem
            font-weight: 400
            line-height: 1.6
            margin-top 0
            hyphens: auto

            &.firstParagraph
              &:first-letter
                // -webkit-initial-letter: 3 2;
                // initial-letter: 3 2;
                font-size 4.5rem
                line-height: 1
                color: orange
                font-weight: bold
                margin: 0 .7rem 0 0
                float: left
                font-family: serif
                font-weight: bold


            
