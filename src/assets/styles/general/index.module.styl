      // & div:nth-of-type(1) > div
      //   position: -webkit-sticky;
      //   position: sticky;
      //   top 2rem

      .sticky
        position sticky
        top 4rem

        @media(max-width $screen-sm)
          position: unset

      div
        // padding-top 4rem
        // padding-bottom 4rem
        // height: 100%

        @media(max-width $screen-xs)
          padding 0


        // .media
          // width 50%
          // column-count: 2

          // div
          //   float left

        .bannerImgRight
          text-align right
          // position: unset 
          // transform: unset
          margin 0
          padding 0

          @media(max-width $screen-sm)
            text-align left

          @media(max-width $screen-xs)
            text-align: center
            margin 0 auto 

          h3
            margin 0 0 .2rem
            padding 0
            position relative
            font-family $second-family

            @media(max-width $screen-xs)
              margin 0 0 .5rem

            &:before
              content ""
              position: absolute
              border-bottom 4px solid #979899
              width: 80px
              right 0
              top -15px

              @media(max-width $screen-sm)
                right unset
                border-bottom 2px solid #979899
                width 40px
                left 0
                transform none
              
              @media(max-width $screen-xs)
                border-bottom 2px solid #979899
                width 40px
                left 50%
                transform translateX(-50%);
                top -15px

          small 
            line-height: 1
            margin 0
            padding 0

            strong 
              color $yellow

      div
        
        p
          font-size 1rem
          font-weight: 400
          line-height: 1.6
          margin-top 0
          hyphens: auto
          // -webkit-font-smoothing: antialiased;
          font-family: $primary-family
          
          &.firstParagraph
            &:first-letter
              // -webkit-initial-letter: 3 2;
              // initial-letter: 3 2;
              font-size 4.7rem
              line-height: .5
              color: $yellow
              font-weight: bold
              margin: 1.5rem .7rem 0 0
              padding: 0
              float: left
              font-family: $second-family
              font-weight: bold
              vertical-align: baseline


