@import '../core'

.sectionBg
  max-width 100vw

.bannerImgRight  
  width 100%

  @media(max-width $screen-sm)
    width: 60%;
    text-align: center;
    margin: 0 auto;

  img 
    width 100%
    border-radius 100% 50% 50% 100% / 75% 69% 69% 75%
    box-shadow 2px 10px 0px 0px rgba(0, 0, 0, 0.16)

.container
  .wrapper
    height calc(100vh - 56px)
    position relative

    .bannerImgRight
      position absolute
      transform: translate(-50%,-50%);
      top: 50%; 
      left: 50%;
      width 250px

    .contentText
      position absolute
      transform: translateY(-50%);
      top: 50%;
      width 100%
      display block

      h1 
        span
          display: block
          line-height: 1
          font-weight: 400
          font-size 3.1rem
          // font-family: 'Advent Pro'

          &:nth-of-type(2)
            font-size: 8rem
            font-weight: 900
            text-transform: uppercase
            color $yellow
            letter-spacing: -.3rem
            line-height: .8;  
            // font-family: sans-serif;
            // font-family: 'Advent Pro'
      
      p 
        font-size 1.2rem
        font-weight: 200
        letter-spacing: .05rem
        line-height: 1.4
        margin 0
        padding 0 0 0 6px
        font-family: 'Advent Pro'

        &:nth-of-type(2)
          font-style: italic

      

    .contentFooter
      position absolute
      bottom: 0
      width 100%
      display block

      .social
        list-style: none
        margin 0 0 1.5rem 
        padding 0
        text-align: right

        li  
          display: inline-block
          margin-left: 1.5rem

          &:hover
            a 
              color #ffffff

          a 
            color #666666
            text-decoration: none     

      .perosnalContact
        list-style: none
        margin 2rem 0 0 
        padding 0
        
        li  
          display: inline-block
          margin-right: 6rem

          &:hover
            strong 
              color #ffffff

          strong 
            display: block
            margin-bottom: 1rem
            font-size .7rem
            text-transform: uppercase
            letter-spacing: -.02rem
          
          span
            font-size 1rem
            font-family: 'Advent Pro'
            letter-spacing: .02rem

            a
              text-decoration: none
              padding-right .8rem
              
              &:last-child
                padding-right 0

      hr
        border-top: 1px solid #000;
        border-bottom: 1px solid #fff;
        border-left: none;
        border-right: none;
        opacity: .02;
        bottom 0
