// .sectionBg,
.sections
  color #ccc
  position relative

  // Primeiro Elemento
  &:nth-child(odd)
    background-color #292a2a

    .headerBg
      background-color: #2B2C2E
    
    .contentBg
      background-color: #2d2e2e

    .container
      .wrapper

        > div:nth-child(2)
          background-color: #2d2e2e
          height 100%
          display block

  // Segundo Elemento
  &:nth-child(even)
    background-color #2d2e2e

    .headerBg
      background-color: #292a2a
    
    .contentBg
      background-color: #2b2c2c

    .container
      .wrapper
        > div:nth-child(2)
          background-color: #2b2c2c
          height 100%
          display block
  
  // Abre
  &:nth-child(1)
    .container .wrapper

      @media(max-width 768px)
        display grid
        grid-template-columns 100%
    

  // Intro
  &:nth-child(2)
    .container .wrapper 
      
      div:nth-of-type(2)
        column-count: 2;

        @media(max-width 768px)
          column-count unset
          padding 4rem 3rem
        
        @media(max-width 600px)
          column-count unset
          padding 4rem 3rem

        @media(max-width $screen-xs)
          padding 2rem

  // Expertise
  &:nth-child(3)
    .container
      .wrapper
        > div:nth-child(2)
            padding 2rem 5rem

            @media(max-width 768px)
              padding 2rem 3rem
            
            @media(max-width 600px)
              padding 2rem
              
    
    .media
      display grid
      grid-template-columns 50% 50%

      @media(max-width 768px)
        grid-template-columns 100%
        padding 0
    
      .item
        margin 2rem 2rem 2rem 0

        @media(max-width 600px)
          margin 0 0 2rem 0
          padding 0

        span 
          display block
          height 100%
          width: 2.8rem;
          float left
          color: $yellow
          font-weight bold
          font-size 1.2rem
          line-height: 1

        h3 
          margin 0 0 .8rem
          text-transform: uppercase
          font-size 1rem
        
        p
          padding-left: 2.8rem
          font-family: 'Advent Pro'
          margin-bottom 0

  .container
    margin 0 auto
    max-width 1400px
    padding 1rem 0 0
    padding-top 0
    color #979899
    z-index 5
    position relative

    @media(max-width $screen-sm)
      padding 0

    .wrapper
      display grid
      grid-template-columns 33% 67%
      height 100%

      @media(max-width $screen-xs)
        grid-template-columns: unset

      > div:nth-of-type(1)
          @media(max-width $screen-xs)
            padding 1rem
      
      > div:nth-of-type(2)
          @media(max-width $screen-xs)
            padding 2rem

  a 
    color $yellow

  .headerBg 
    background #2b2c2c
    display block
    position absolute
    height 100%
    width 50%
    z-index 1
  
  .contentBg
    background #2d2e2e
    display block
    position absolute
    height 100%
    width 50%
    right 0
    z-index 1

.footerBg
  color #ccc
  position relative
  background-color #222

.footer > .container
  color #cccccc !important